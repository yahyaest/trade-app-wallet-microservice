generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id           Int        @id @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  name         String
  username     String
  intialValue   String
  currentValue String
  type         WalletType
  assets       Asset[]

  @@unique([name, username])
}

model Asset {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  username     String
  walletName  String
  wallet       Wallet?   @relation(fields: [walletId], references: [id])
  walletId     Int?
  type         AssetType
  name         String
  symbol       String?
  amount       Int
  boughtAt     String
  soldAt       String
  boughtAmount Int
  soldAmount   Int

  @@unique([username, walletName, name])
}

enum WalletType {
  CRYPTO
  STOCK
  FOREX
}

enum AssetType {
  CRYPTO
  STOCK
  FOREX
}
